<%- unless post.attachments -%>
  <p>No attached file.</p>
<%- else -%>
  <h2>
    <%= post.name %>
  </h2>

  <script type='text/javascript' src='/javascripts/swfobject.js'></script>

  <p id="<%= post.id %>_player"></p>

  <script type='text/javascript'>
  var so_<%= post.id %> = new SWFObject('/flash/player.swf','mpl','445','20','9');
  so_<%= post.id %>.addParam('allowfullscreen','true');
  so_<%= post.id %>.addParam('allowscriptaccess','always');
  so_<%= post.id %>.addParam('flashvars','file=<%= couch_uri + post.attachment_path(post.attachments.keys.first) %>');
  so_<%= post.id %>.write('<%= post.id %>_player');
  </script>
<%- end -%>